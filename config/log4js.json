
{
    "appenders":
        [
            {
                "category":"console",
                "type":"console"
            },
            {
                "category":"log_file",
                "type": "file",
                "filename": "./logs/log_file/file.log",
                "maxLogSize": 104800,
                "backups": 100
            },
            {
                "category":"log_date",
                "type": "dateFile",
                "filename": "./logs/log_date/date",
                "alwaysIncludePattern": true,
                "pattern": "-yyyy-MM-dd-hh.log"
            },
            {
                "category": "log_trace",
                "type": "datefile",
                "filename": "./logs/log_trace/trace"
            },
            {
                "category": "log_error",
                "type": "datefile",
                "filename": "./logs/log_error/error"
            },
            {
                "category": "log_todo",
                "type": "datefile",
                "filename": "./logs/log_todo/todo"
            }
        ],
    "replaceConsole": true,
    "levels":
    {
        "console":"ALL",
        "log_file":"ALL",
        "log_date":"ALL",
        "log_trace":"ALL",
        "log_error":"ALL",
        "log_todo":"ALL"
    }
}
